<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5E6"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/txtIdEmpleado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#050505"
        android:ems="10"
        android:hint="Empleado Id"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:textColorHint="#050505"
        app:layout_constraintBottom_toTopOf="@+id/txtContaseniaEmpleado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/txtContaseniaEmpleado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#050505"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:textColorHint="#050505"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIdEmpleado" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="202dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_rounded"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContaseniaEmpleado" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="202dp"
        android:layout_height="40dp"
        android:layout_marginBottom="273dp"
        android:background="@drawable/button_rounded"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/arteydiseno"
        app:layout_constraintBottom_toTopOf="@+id/txtIdEmpleado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>