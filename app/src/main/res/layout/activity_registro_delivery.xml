<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5E6"
    tools:context=".Delivery.Registro_Delivery_Activity">

    <include
        android:id="@+id/include4"
        layout="@layout/action_bar_toolbar" />

    <TextView
        android:id="@+id/txvDeliveryId"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="44dp"
        android:text="Delivery Id"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <TextView
        android:id="@+id/txvOrdenId"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="41dp"
        android:text="Orden Id"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvDeliveryId" />

    <TextView
        android:id="@+id/txvNombreDeliverComp"
        android:layout_width="162dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:text="Nombre CompaÃ±ia"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvOrdenId" />

    <TextView
        android:id="@+id/txvDeliverTel"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="43dp"
        android:text="Telefono"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvNombreDeliverComp" />

    <TextView
        android:id="@+id/txvDeliverCorreo"
        android:layout_width="78dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="43dp"
        android:text="Correo"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvDeliverTel" />

    <TextView
        android:id="@+id/txvDeliverFecha"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Fecha entrega"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvDeliverCorreo" />

    <EditText
        android:id="@+id/txtDeliId"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="33dp"
        android:ems="8"
        android:hint="Ingrese id"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvDeliveryId"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <EditText
        android:id="@+id/txtNombreCom"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="43dp"
        android:ems="8"
        android:hint="Ingrese nombre"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvNombreDeliverComp"
        app:layout_constraintTop_toBottomOf="@+id/spOrderDeli" />

    <EditText
        android:id="@+id/txtTelefonoDeli"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="43dp"
        android:ems="8"
        android:hint="Ingrese telefono"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvDeliverTel"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreCom" />

    <EditText
        android:id="@+id/txtCorreoDeli"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="43dp"
        android:ems="8"
        android:hint="Ingrese correo"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvDeliverCorreo"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefonoDeli" />

    <Spinner
        android:id="@+id/spOrderDeli"
        android:layout_width="154dp"
        android:layout_height="42dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="43dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvOrdenId"
        app:layout_constraintTop_toBottomOf="@+id/txtDeliId" />

    <EditText
        android:id="@+id/txtFechaEntregaDeli"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Ingrese fecha"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvDeliverFecha"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoDeli" />

    <Button
        android:id="@+id/btnRegistrarDeliver"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#52658F"
        android:text="Guardar"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvDeliverFecha" />

    <Button
        android:id="@+id/btnActualizarDeliver"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#52658F"
        android:text="Actualizar"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/btnRegistrarDeliver"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaEntregaDeli" />

    <Button
        android:id="@+id/btnBuscarDeliver"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#52658F"
        android:text="Buscar"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarDeliver" />

</androidx.constraintlayout.widget.ConstraintLayout>