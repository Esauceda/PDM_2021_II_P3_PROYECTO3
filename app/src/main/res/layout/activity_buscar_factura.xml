<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5E6"
    tools:context=".Factura.Buscar_Factura_Activity">

    <include
        layout="@layout/action_bar_toolbar"/>

    <TextView
        android:id="@+id/txvFacturaId2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="81dp"
        android:text="Factura Id"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtFacturaId2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvOrdenIdFac2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="82dp"
        android:text="Orden Id"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txvFechaFac2"
        app:layout_constraintEnd_toStartOf="@+id/txvMostrarFacOrdenId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txvFacturaId2" />

    <TextView
        android:id="@+id/txvFechaFac2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="39dp"
        android:text="Fecha factura"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvMostrarFechaFac"
        app:layout_constraintEnd_toStartOf="@+id/txvMostrarFechaFac"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txvTotalFac2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="105dp"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txvMostrarTotalFac"
        app:layout_constraintEnd_toStartOf="@+id/txvMostrarTotalFac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txvMostrarTotalFac" />

    <EditText
        android:id="@+id/txtMostrarFacturaId"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="19dp"
        android:ems="8"
        android:hint="Ingrese id"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvFacturaId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvMostrarFechaFac"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="40dp"
        android:ems="8"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvFechaFac2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvMostrarTotalFac"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="40dp"
        android:ems="8"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvTotalFac2"
        app:layout_constraintTop_toBottomOf="@+id/txvMostrarFechaFac" />


    <TextView
        android:id="@+id/txvMostrarFacOrdenId"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginEnd="38dp"
        android:ems="8"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txvOrdenIdFac2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvOrdenIdFac2"
        app:layout_constraintTop_toTopOf="@+id/txvOrdenIdFac2" />

    <Button
        android:id="@+id/btnBuscarFac2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#52658F"
        android:text="Buscar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEliminarFac"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#52658F"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btnMostrarTodosFacturas"
        android:layout_width="146dp"
        android:layout_height="49dp"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#52658F"
        android:text="Mostar todos"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>